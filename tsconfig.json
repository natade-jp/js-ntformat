{
	"buildOnSave": false, // 保存時にビルドしない
	"compileOnSave": false, // 保存時にコンパイルしない
	// コンパイルオプション
	"compilerOptions": {
		"allowJs": true, // JavaScript ファイルをコンパイル対象にする
		"checkJs": true, // JavaScript ファイルの型整合性などをチェック
		"declaration": true, // 型定義ファイルを出力する
		"emitDeclarationOnly": true, // 型定義ファイルのみを出力する
		"module": "esnext", // モジュールの方式
		"target": "esnext", // 出力する ECMAScript のバージョン
		"moduleResolution": "node", // モジュール解決の方式
		"noImplicitAny": true, // 暗黙的な any をエラーにする
		"lib": ["esnext", "dom"], // コンパイルに含めるライブラリの指定
		"newLine": "LF", // 生成コードの改行コードを指定する
		"ignoreDeprecations": "5.0",
		"outDir": "./build/dts/" // 出力先ディレクトリ
	},
	"include": ["./build/esm/index.js"] // コンパイル対象のファイル
}
